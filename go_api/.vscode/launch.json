{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Go API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "DB_HOST": "localhost",
                "DB_PORT": "5432",
                "DB_NAME": "poultry_farm",
                "DB_USER": "postgres",
                "DB_PASSWORD": "postgres",
                "API_PORT": "8080",
                "JWT_SECRET": "change-this-secret-key-in-production"
            },
            "args": [],
            "showLog": true,
            "trace": "verbose",
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to Go API",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0,
            "showLog": true
        }
    ]
}

